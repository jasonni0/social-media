<div class="col-12 pt-3">
  <div class="container">
    <h1>Create New Comment</h1>
    <div class="jumbotron">
        <%= bootstrap_form_with model: @comment, url: user_post_comments_path(current_user, @post), method: :post, local: true do |f| %>
            <%= f.text_area :comment_post %>
            <%= f.submit %>
        <% end %>
    </div>
    <%= link_to 'Back', user_posts_path(current_user), class: "btn btn-outline-primary"%>
  </div>
</div>
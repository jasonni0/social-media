<div class="col-12 pt-3">
  <div class="container">
    <h1>Create New Post</h1>
    <div class="jumbotron">
        <%= bootstrap_form_with model: @post, url: user_posts_path(@user), method: :post, local: true do |f| %>
            <%= f.text_field :title %>
            <%= f.text_area :description %>
            <%= f.submit %>
        <% end %>
    </div>
  </div>
</div>
<div class="col-12 pt-3">
  <div class="container">
    <h1>Edit Post</h1>
    <div class="jumbotron">
        <%= bootstrap_form_with model: @post, method: :patch, url: user_post_path(@user, @post), local: true do |f| %>
            <%= f.text_field :title %>
            <%= f.text_area :description %>
            <%= f.submit %>
        <% end %>
    </div>
    <%= link_to 'Cancel', user_path(@user), class: 'btn btn-outline-primary' %>
  </div>
</div>